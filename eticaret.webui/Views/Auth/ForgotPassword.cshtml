@{
    Layout = "~/Views/Shared/_ProcessLayout.cshtml";
    ViewData["Title"] = "E-Posta Adresimi Güncelle";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ui/userinfo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ma.css">
    <style>
        main{
            min-height:75vh;
            display:flex;
            justify-content:center;
        }
    </style>
}

<div class="login-page quicksand d-flex align-items-center">
    <div class="login-cart p-4" style="box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
        <div style="width:400px;">
            <div><p>@TempData["Validations"]</p></div>
            <h2 style="font-size:1.5rem;font-family:'quicksand', sans-serif" class="border-bottom">Şirfe Sıfırla</h2>
            <form method="post"
                class="login-form" style="width:100%;">
                <div class="input-div mt-4">
                    <label for="email">E-Posta Adresi</label>
                    <input id="email" type="text" name="email" class="user-input d-block w-100" placeholder="E-Posta Adresi Buraya">
                </div>
                <button type="submit" class="user-button-dark w-100 mt-2">Gönder</button>
            </form>
        </div>
    </div>

</div>
 