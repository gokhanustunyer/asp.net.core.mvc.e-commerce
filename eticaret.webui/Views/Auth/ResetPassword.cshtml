@model ResetPasswordModel
@{
    Layout = "~/Views/Shared/_ProcessLayout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ui/userinfo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ma.css">
    <style>
        main{
            min-height:75vh;
            display:flex;
            justify-content:center;
        }
    </style>
}

<div class="login-page" style="margin:3rem 0">
    <div class="login-cart">
        <div style="width:400px;">
            <div><p>@TempData["Validations"]</p></div>
            <h2 class="login-title">Şirfe Sıfırla</h2>
            <form method="post" class="login-form" style="width:100%;">
                <div class="input-div">
                    <label asp-for="Email">E-Posta Adresi</label>
                    <input type="email" asp-for="Email"
                           class="form-input" placeholder="E-Posta Adresi Buraya">
                </div>
                <div class="input-div">
                    <label asp-for="Password">Yeni Şifre</label>
                    <input type="password" asp-for="Password"
                           class="form-input">
                </div>
                <div class="input-div">
                    <label asp-for="PasswordAgain">Yeni Şifre Tekrar</label>
                    <input type="password" asp-for="PasswordAgain"
                           class="form-input">
                </div>
                <input hidden asp-for="Token"/>
                <input hidden asp-for="userId"/>
                <button type="submit" class="form-button">Gönder</button>
            </form>
        </div>
    </div>

</div>
 