@model List<ProductListModel>

<div class="mt-5" style="max-width:1370px;margin: 2rem auto;">
    <h5 class="quicksand font-weight-bold py-1 mb-0" style="font-size: 1.35rem;">Benzer Ürünler</h5>
    <div class="d-flex similar-products">
        <span class="scroller-left prev mr-3"><i class="fa-solid fa-chevron-left"></i></span>
        <div class="similar-products_products similars row py-1 flex-nowrap d-flex">
            @for (int i = 0; i < Model.Count; i++)
            {
            <a class="col-lg-3 col-md-4 col-sm-6 mb-3 mr-3 p-0" href="/urunler/@Model[i].Url">
                <div class="product-cart">
                    <div class="product-cart-img">
                        <img src="@Model[i].MainImageUrl"/>
                    </div>
                    <div class="product-cart-info">
                        <div class="d-flex quicksand">
                            <div class="ellipsis" style="width:100%">
                                <p class="ellipsis">@Model[i].Name</p>
                            </div>
                            <div class="text-right" style="width: 40%;">
                                <p class="font-weight-bold">@Model[i].Price TL</p>
                            </div>
                        </div>
                        <p>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                        </p>
                    </div>
                    <div class="absolute-icons">
                        <span class="cart-icon-link"><i class="cart-icon fa-regular fa-heart"></i></span>
                        <span class="cart-icon-link mt-2"><i class="cart-icon fa-solid fa-basket-shopping"></i></span>
                        <span class="cart-icon-link mt-2"><i class="fa-solid fa-magnifying-glass"></i></span>
                    </div>
                </div>
            </a>
            }
        </div>
        <span class="scroller-right next"><i class="fa-solid fa-chevron-right"></i></span>
    </div>
</div>
