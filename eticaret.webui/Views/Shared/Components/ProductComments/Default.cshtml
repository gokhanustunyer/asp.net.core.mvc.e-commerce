@model List<ProductCommentModel>
@if(Model.Count != null && Model.Count > 0)
{
    <div class="product-comments">
        <h5 class="bottom-line quicksand font-weight-bold border-bottom pb-1">
            @(ViewBag.HaveImage ? "Fotoğraflı Değerlendirmeler" : "Değerlendirmeler")
        </h5>
        <div class="comments mt-3">
            @for(int i = 0; i < Model.Count; i++)
            {  
            <div class="comment mb-3 p-3">
                <div class="space-between">
                    <div class="row">
                        <div class="col quicksand">
                            <p class="font-weight-bold mb-1">@Model[i].FullName</p>
                        </div>
                        <div class="col" style="text-align:right">
                        @for (int j = 0; j < Model[i].Rate; j++)
                        {
                            <i style="color:orange" class="fa-solid fa-star"></i>            
                        }
                        @for (int j = 0; j < 5 - Model[i].Rate; j++)
                        {            
                            <i style="color:orange" class="fa-regular fa-star"></i>
                        }
                        </div>
                    </div>
                    @if (ViewBag.HaveImage)
                    {
                    <div class="row pl-3" style="gap:10px">
                        @foreach(string path in Model[i].ImagePaths)
                        {
                            <a href="@path" style="height:100px;width:100px;object-fit:cover;background-image:url('@path');background-repeat: no-repeat;background-size:cover;background-position: center;" data-lightbox="commentImages"></a>
                        }
                    </div>  
                    }
                    <div class="row">
                        <div class="col">
                            <p class="mb-0">@Model[i].Comment</p>
                        </div>
                        <div class="col" style="text-align:right">
                            <p class="mb-0">@Model[i].UpdateDate</p>
                        </div>
                    </div>
                </div>
                <div class="space-between align-center mt-1">
                </div>
            </div>
            }
        </div>
    </div>
}

else{
    <div class="product-comments container mt-3 pl-0 ml-0">
        <p class="similar-products_title quicksand">
            @(ViewBag.HaveImage ? "Henüz Fotoğraflı Değerlendirme Yok" : "Henüz Değerlendirme Yok")
        </p>
    </div>
}
