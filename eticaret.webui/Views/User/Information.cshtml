@model AppUser

@{
    List<Address> Addresses = (Model.Addresses!=null) ? Model.Addresses.ToList() : new();
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Profilim";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ui/userinfo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ma.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
}
@section SubHeader{
<div class="sub-header">
    <div class="sub-header-content">
        <span class="category col-lg-8 col-sm-12 col-md-8 m-0 p-0">
            <h3 class="category-title">
                Bilgilerim
            </h3>
            <p class="category-tree">
                Hesabım <span class="mx-1">></span> Profil
            </p>
        </span>
    </div>
</div>
}

<div class="w-100 ml-3" style="box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
    <div class="main-body">
        <div class="row gutters-sm">
        <div class="col-md-12">
            <div class="mb-3">
                <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">İsim Soyisim</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @Model.FirstName @Model.LastName
                </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Email
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Telefon</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.PhoneNumber
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Cinsiyet</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        Erkek
                    </div>
                </div>
                <hr>
                <div class="row mb-2" style="align-items:center">
                <div class="col-sm-3">
                    <h6 class="mb-0">Adreslerim</h6>
                </div>
                </div>
                @for(int i=0;i<Addresses.Count;i++)
                {
                    <div class="row mt-2" style="font-size:0.9rem">
                    <div class="col-sm-2">
                        <h6 class="mb-0">@Addresses[i].Title</h6>
                    </div>
                    <div class="col-sm-6 text-secondary">
                        <p>@Addresses[i].DetailedAddress</p>
                    </div>
                    <div class="col-sm-4 text-secondary">
                        @Addresses[i].Neighborhood @Addresses[i].City/@Addresses[i].District
                    </div>
                    </div>
                }
                <hr>
                <div class="row">
                <div class="col-sm-12">
                    <a class="user-button-dark-link" href="/User/EditUserInfo">Düzenle</a>
                </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>           
