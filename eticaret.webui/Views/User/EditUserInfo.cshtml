@model AppUser


@{
    List<Address> Addresses = (Model.Addresses!=null) ? Model.Addresses.ToList() : new();
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Profilimi Düzenle";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ui/userinfo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ma.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
}

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/notyf/3.10.0/notyf.min.js" integrity="sha512-467grL09I/ffq86LVdwDzi86uaxuAhFZyjC99D6CC1vghMp1YAs+DqCgRvhEtZIKX+o9lR0F2bro6qniyeCMEQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/dialog.js"></script>
    <script src="~/js/ui/country.js"></script>
    <script src="~/js/ui/address.js"></script>
    <script src="~/js/ui/getUserAddressesForEdit.js"></script>
    <script src="~/js/ui/user.js"></script>
}
@section SubHeader{
<div class="sub-header">
    <div class="sub-header-content">
        <span class="category col-lg-8 col-sm-12 col-md-8 m-0 p-0">
            <h3 class="category-title">
                Bilgilerimi Düzenle
            </h3>
            <p class="category-tree">
                Hesabım <span class="mx-1">></span> Bilgilerim <span class="mx-1">></span> Düzenle
            </p>
        </span>
    </div>
</div>
}
<div class="w-100 ml-3" style="box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
    <div class="main-body">
    <form method="post" action="/user/updateUser">
        <div class="row gutters-sm">
        <div class="col-md-12">
            <div class="mb-3">
                <div class="row">
                <div class="col-sm-6">
                    <div>
                        <h6 class="mb-0">İsim</h6>
                    </div>
                    <div class="text-secondary">
                        <input class="user-input mt-1 w-100" name="firstName" value="@Model.FirstName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div>
                        <h6 class="mb-0">Soyisim</h6>
                    </div>
                    <div class="text-secondary">
                        <input class="user-input mt-1 w-100" name="lastName" value="@Model.LastName">
                    </div>
                </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-2">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                        <p>@Model.Email</p>
                    </div>
                    <div class="col-sm-2 text-right">
                        <a href="/user/UpdateEmail"><i class="text-primary fa-solid fa-marker"></i></a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-2">
                        <h6 class="mb-0">Telefon</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                        <p>@Model.PhoneNumber</p>
                    </div>
                    <div class="col-sm-2 text-right">
                        <a href="/user/UpdatePhone">
                            <i class="text-primary fa-solid fa-marker"></i>
                        </a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-2">
                        <h6 class="mb-0">Şifre</h6>
                    </div>
                    <div class="col-sm-8 text-secondary">
                        <p> &#8226 &#8226 &#8226 &#8226 &#8226 &#8226 &#8226 &#8226 &#8226 </p>
                    </div>
                    <div class="col-sm-2 text-right">
                        <a onclick='ConfirmDialog("Şifrenizi yenilemek istediğimizden emin misiniz?", "resetPassword()")'>
                            <i class="text-primary fa-solid fa-marker"></i>
                        </a>
                    </div>
                </div>
                <hr>
                <div class="row mb-4" style="align-items:center">
                <div class="col-sm-3">
                    <h6 class="mb-0 mt-4">Adreslerim</h6>
                </div>
                <div class="col-sm-9 text-secondary" style="text-align:right">
                    <a class="user-button-success-link" onclick="addAddress()">
                        Ekle <i style="cursor:pointer"
                        class="fa-solid fa-plus"></i>
                    </a>
                </div>
                </div>
                <div id="addresses"> <!-- Addresses --> </div>
                <hr>
                <div class="row">
                <div class="col-sm-12">
                    <button class="w-100 user-button-dark">Kaydet</button>
                </div>
                </div>
            </div>
        </div>
        </div>
    </form>
    </div>
</div>


<div class="dialog" style="position:fixed;">
    <div class="dialog-window" style="width:75%;height:540px;overflow-y:scroll">

    </div>
</div>
