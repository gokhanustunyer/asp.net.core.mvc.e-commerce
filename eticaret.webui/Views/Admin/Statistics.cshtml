<div class="statistics">
    <div class="compare grid-2">
        <div class="box-shadow">
            <h3 class="subtitle">Geçen Aya Göre Satış Değişimi (Miktar)</h3>
            <div class="a-center">
                <i class="fa-solid fa-caret-up" style="color:green;font-size:2.2rem"></i>
                <span style="font-weight: 700;font-size: 1.75rem;font-family:
                      'poppins';color: green;">1.556,92</span>
            </div>
        </div>
        <div class="box-shadow">
            <h3 class="subtitle">Geçen Aya Göre Satış Değişimi (Yüzde)</h3>
            <div class="a-center">
                <i class="fa-solid fa-caret-up" style="color:green;font-size:2.2rem"></i>
                <span style="font-weight: 700;font-size: 1.75rem;font-family:
                      'poppins';color: green;">%7.2</span>
            </div>
        </div>
    </div>

    <div class="compare grid-2 mt-2">
        <div class="box-shadow">
            <h3 class="subtitle">Geçen Yıla Göre Satış Değişimi (Miktar)</h3>
            <div class="a-center">
                <i class="fa-solid fa-caret-down" style="color:red;font-size:2.2rem"></i>
                <span style="font-weight: 700;font-size: 1.75rem;font-family:
                      'poppins';color: red;">3.452,53</span>
            </div>
        </div>
        <div class="box-shadow">
            <h3 class="subtitle">Geçen Yıla Göre Satış Değişimi (Yüzde)</h3>
            <div class="a-center">
                <i class="fa-solid fa-caret-down" style="color:red;font-size:2.2rem"></i>
                <span style="font-weight: 700;font-size: 1.75rem;font-family:
                      'poppins';color: red;">%9.1</span>
            </div>
        </div>
    </div>
    <div id="charts">
        <div class="mb-2" style="margin-top:2rem!important">
            <h4 class="changeAmount chart mb-1" style="margin-bottom:.75rem">
                Aylık Satış Grafiği (Ciro)</h4>
            <div class="grid-2 chart">
                <div class=chart-md>
                    <canvas id="salePrices"></canvas>
                </div>
                <div class="chart-sm">
                    <canvas id="salesByCategoryPrice"></canvas>
                </div>
            </div>
        </div>
        <div class="mb-2" style="margin-top:2rem!important">
            <h4 class="changeAmount chart mb-1" style="margin-bottom:.75rem">
                Aylık Satış Grafiği (Miktar)</h4>
            <div class="grid-2 chart">
                <div class=chart-md>
                    <canvas id="saleCounts"></canvas>
                </div>
                <div class="chart-sm">
                    <canvas id="salesByCategoryCount"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
