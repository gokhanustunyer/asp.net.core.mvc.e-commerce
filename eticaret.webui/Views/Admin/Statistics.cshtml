@model AdminStatisticsModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "İstatistikler";
}

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin/statistic.js"></script>
    <script src="~/js/admin/adminchart.js"></script>
}

@section Styles{
    <style>
        .statistics{
            margin: auto;
            margin-top: 2rem;
        }
        .chart-sm{
            max-width: 300px;
            margin: auto;
            height: 100%;
            box-shadow: rgb(0 0 0 / 2%) 0px 1px 3px 0px, rgb(27 31 35 / 15%) 0px 0px 0px 1px;
            padding: 1rem;
            border-radius: 8px
        }
        .chart-md{
            width: 700px;
            margin: auto;
            height: 100%;
            box-shadow: rgb(0 0 0 / 2%) 0px 1px 3px 0px, rgb(27 31 35 / 15%) 0px 0px 0px 1px;
            padding: 1rem;
            border-radius: 8px
        }
        .box-shadow{
            box-shadow: rgb(0 0 0 / 2%) 0px 1px 3px 0px, rgb(27 31 35 / 15%) 0px 0px 0px 1px;
            padding: 1rem;
            border-radius: 8px
        }
        .a-center{
            display:flex;
            gap:10px;
            align-items:center
        }

        .subtitle{
            color: #b2b2b2;
            font-size: .75rem;
        }
    </style>
}

